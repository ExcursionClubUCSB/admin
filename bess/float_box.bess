
/ .float_box {

	position: fixed;
	display: none;

	background-color: rgba(0,0,0,0.72);
	width: 100%;
	height: 100%;
	margin: 0;
	top: 0;
	left: 0;
	z-index: 2048;

	/ >div {

		position: absolute;
		display: block;

		top: 45%;
		height: 180px;
		margin-top: -90px;
		
		left: 50%;
		width: 340px;
		margin-left: -170px;

		border: 2px solid black;
		background-color: rgba(200, 200, 200, 0.9);
	}
}